{
    "comments": {
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"], 
		["`", "`"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
		["`", "`"]
    ],
	"onEnterRules": [
		{
			"beforeText": "^\\s*(?:\\+\\-\\-\\s+|>{1,2}\\s+|>(?:[:a-zA-Z0-9_-]+)>\\s+)",
			"action": {
				"indent": "indent"
			}
		},
		{
			"beforeText": "^\\s*(?:- )",
			"action": {
				"indent": "none",
				"appendText": "- "
			}
		},
		{
			"beforeText": "^\\s*(?:\\d+\\.\\s+)",
			"action": {
				"indent": "none",
				"appendText": "1. "
			}
		}
	]
}